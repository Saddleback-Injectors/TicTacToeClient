          <TableColumn fx:id="titleCol" prefWidth="140.0" text="Game Title" />
            <TableColumn fx:id="hostCol" text="Host" />
            <TableColumn fx:id="opponentCol" text="Opponent" />
        </columns>
      </TableView>
   </children>
