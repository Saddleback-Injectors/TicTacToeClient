<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2A363B;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.saddleback.cs4b.UI.ViewGameHistoryController">
   <children>
      <TableView fx:id="gameInfoTable" layoutX="14.0" layoutY="60.0" onMouseClicked="#onRowClicked" prefHeight="500.0" prefWidth="585.0">
        <columns>
          <TableColumn fx:id="idCol" prefWidth="56.0" text="ID" />
          <TableColumn fx:id="startTimeCol" prefWidth="126.0" text="Start Time" />
            <TableColumn fx:id="endTimeCol" prefWidth="118.0" text="End Time" />
            <TableColumn fx:id="hostCol" prefWidth="120.0" text="Host" />
            <TableColumn fx:id="opponentCol" prefWidth="85.0" text="Opponent" />
            <TableColumn fx:id="resultCol" prefWidth="79.0" text="Result" />
        </columns>
      </TableView>
      <TableView fx:id="detailsTable" layoutX="613.0" layoutY="60.0" prefHeight="500.0" prefWidth="84.0">
        <columns>
          <TableColumn fx:id="movesCol" prefWidth="85.0" text="Moves" />
        </columns>
      </TableView>
      <Button fx:id="returnToProfileBtn" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#handleReturnToProfileAction" onMouseEntered="#highlightReturnToProfile" onMouseExited="#resetReturnToProfile" style="-fx-background-color: #FFFFFF;" text="Return To Profile">
         <font>
            <Font size="16.0" />
         </font></Button>
      <Button fx:id="refreshBtn" layoutX="688.0" layoutY="13.0" mnemonicParsing="false" onMouseClicked="#handleRefreshAction" onMouseEntered="#highlightRefresh" onMouseExited="#resetRefresh" style="-fx-background-color: #FFFFFF;" text="Refresh">
         <font>
            <Font size="16.0" />
         </font>
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@refresh.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <TableView fx:id="viewersTable" layoutX="697.0" layoutY="60.0" prefHeight="500.0" prefWidth="93.0">
         <columns>
            <TableColumn fx:id="viewersCol" prefWidth="92.0" text="Viewers" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
