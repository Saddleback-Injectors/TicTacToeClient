<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #1B262B;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.saddleback.cs4b.UI.DeactivateAccountController">
   <children>
      <Pane layoutX="60.0" layoutY="100.0" prefHeight="200.0" prefWidth="480.0" style="-fx-background-color: #2A363B;">
         <effect>
            <DropShadow />
         </effect>
         <children>
            <Label layoutX="10.0" layoutY="29.0" text="Are you sure that you want to deactivate your Account?" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="yesButton" layoutX="60.0" layoutY="100.0" mnemonicParsing="false" onMouseClicked="#handleYesAction" onMouseEntered="#highlightYes" onMouseExited="#resetYes" prefHeight="40.0" prefWidth="125.0" style="-fx-background-color: #FFFFFF;" text="Yes">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="noButton" layoutX="295.0" layoutY="100.0" mnemonicParsing="false" onMouseClicked="#handleNoAction" onMouseEntered="#highlightNo" onMouseExited="#resetNo" prefHeight="40.0" prefWidth="125.0" style="-fx-background-color: #FFFFFF;" text="No">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
